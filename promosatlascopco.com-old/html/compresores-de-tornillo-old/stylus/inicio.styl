@font-face
	font-family 'SourceSansPro'
	font-style normal
	font-weight 400
	src url(../fonts/SourceSansPro-Regular.otf) format("OpenType")
@font-face
	font-family 'SourceSansPro'
	font-style italic
	font-weight 400
	src url(../fonts/SourceSansPro-RegularIt.otf) format("OpenType")
@font-face
	font-family 'SourceSansPro'
	font-style italic
	font-weight 600
	src url(../fonts/SourceSansPro-SemiboldIt.otf) format("OpenType")
@font-face
	font-family 'SourceSansPro'
	font-style italic
	font-weight 700
	src url(../fonts/SourceSansPro-BoldIt.otf) format("OpenType")
@font-face
	font-family 'SourceSansPro'
	font-style italic
	font-weight 800
	src url(../fonts/SourceSansPro-BlackIt.otf) format("OpenType")
header
	padding-top 20px
	padding-bottom 20px
	background-color white
	position fixed
	top 0px
	z-index 2
	img
		width 100px
	ul.rrss
		list-style none
		margin-bottom 0px
		padding-left 0px
		text-align right
		margin-top 5px
		li
			display inline-block
			margin-left 7px
			margin-right 7px
			a
				i
					color #2394c4
#slider
	position relative
	.slider
		position absolute
		top 50%
		img
			opacity 0.5
			width 30px
			&:hover
				opacity 1
	.slider-prev
		left 3%
	.slider-next
		right 3%
	ul
		padding-left 0px
		list-style none
		margin-bottom 0px
		li
			display inline-block
			width 100%
			img
				width 100%
			.info
				position absolute
				bottom 50px
				display inline-block
				background-color rgba(35,148,196,0.95)
				padding 25px 35px
				width 440px
				h2
					font-family 'SourceSansPro'
					font-style italic
					font-weight 800
					font-size 28px
					color white
				p
					font-family 'SourceSansPro'
					font-style italic
					font-weight 400
					font-size 18px
					line-height 20px
					color white
					text-align justify
				a
					padding 10px 15px
					background-color white
					font-family 'SourceSansPro'
					font-style normal
					font-weight 700
					font-size 16px
					color #2394c4
					margin-top 15px
					text-decoration none
					display inline-block
@media (max-width: 575px)
	#slider
		margin-top 85px
		.slider
			top 38%
		.info
			position static !important
			width 100% !important
			h2
				font-size 22px !important
			p
				text-align left !important
#content
	padding-top 40px
	padding-bottom 40px
	background-color #f5f5f6
	position relative
	img
		position absolute
		top -30px
		right 0px
		width 400px
	iframe
		margin-top 20px
		border-radius 7px
		border 7px solid white
	.sabias
		background-color #c7cac1
		padding 22px 35px
		h2
			font-family 'SourceSansPro'
			font-style italic
			font-weight 600
			font-size 28px
			color #3a3c3e
		p
			font-family 'SourceSansPro'
			font-style italic
			font-weight 600
			font-size 16px
			line-height 20px
			color #3a3c3e
			text-align justify
			margin-bottom 0px
	.formulario
		background-color #2394c4
		padding 25px 35px
		h3
			font-family 'SourceSansPro'
			font-style italic
			font-weight 700
			font-size 25px
			color white
			text-transform uppercase
		p
			font-family 'SourceSansPro'
			font-style italic
			font-weight 600
			font-size 16px
			line-height 20px
			color white
			text-align justify
			margin-bottom 30px
		input[type="text"],input[type="email"]
			width 100%
			border 0px
			border-bottom 3px solid #c9c8c8
			background-color transparent
			margin-bottom 22px
			padding 5px 10px 5px 30px
			font-family 'SourceSansPro'
			font-style normal
			font-weight 400
			font-style 18px
			color white
			background-repeat no-repeat
			background-position 0
			&.icon-1
				background-image url("../image/icon-user.png")
			&.icon-2
				background-image url("../image/icon-cell.png")
			&.icon-3
				background-image url("../image/icon-sobre.png")
			&.icon-4
				background-image url("../image/icon-edificio.png")
			&.icon-5
				background-image url("../image/icon-marker.png")
		label
			font-family 'SourceSansPro'
			font-style normal
			font-weight 400
			font-size 13px
			color white
			position relative
			padding-left 20px
			input
				position absolute
				top 4px
				left -2px
		button
			padding-top 10px
			padding-bottom 10px
			width 100%
			border 0px
			background-color white
			font-family 'SourceSansPro'
			font-style normal
			font-weight 700
			font-size 18px
			color #2394c4
			margin-top 35px
			cursor pointer
@media (max-width: 575px)
	#content
		img
			display none
		.sabias
			padding 22px 15px
		.formulario
			padding 25px 15px
			h3
				font-size 20px
footer
	padding-top 15px
	padding-bottom 15px
	background-color white
	p
		font-family 'SourceSansPro'
		font-style normal
		font-weight 400
		font-size 10px
		color #717272
		margin-bottom 0px
		a
			img
				width 50px