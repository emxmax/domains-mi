body
	font-family: 'Source Sans Pro', sans-serif;
	color #fff
header
	position absolute
	background #fff
	top 0px
	width 100%
	height 70px
	z-index 1
	@media(max-width 414px)
		text-align center
	img
		padding-top 9px
		max-width 102px
#main
	background url(../img/fondo-landing.jpg)center no-repeat
	background-size cover
	.box-descripcion
		h2
			font-family 'Source Sans Pro'
			font-weight 700
			font-style italic
			font-size 29px
			@media(max-width 736px)
				font-size 20px
		a 
			background #0078a1
			display inline-block
			font-weight 600
			color #fff
			padding 10px 30px
			font-size 16px
#footer-top
	position absolute
	bottom 0px
	background #0078a1
	width 100%
	font-size 12px
	font-weight 400
	padding 10px 0px
	.text-r
		text-align right
	a 
		font-style italic
		color #fff