/***
	Descripci√≥n: Estilos para un modal
***/
.outer-flex-container
	animation mostrarDialog 0.5s ease-in-out
	animation-fill-mode forwards
	align-content center
	align-items center
	background rgba(0,0,0,0.5)
	display flex
	height 100%
	justify-content center
	left 0
	padding-top 80px
	pointer-events auto
	position fixed
	top 0
	opacity 1
	overflow-y scroll
	transition opacity 400ms ease-in
	width 100%
	z-index 9999
	.inner-flex-container
		animation mostarContainer 1s ease-in-out 0.5s
		animation-fill-mode forwards
		position relative
		margin 0% auto
		padding 5px 20px 13px 20px
		border-radius 10px
		background color-grislight3
		opacity 0
		height 500px
		top 0%
		@media screen and (min-width 992px)
			height auto
		.currentTab
			background color-blanco
			border-radius 5px
			border 1px solid color-gris2
			margin 10px 0px
			padding 20px 20px
			width 250px
			@media screen and (min-width : 550px)
				width 450px
			@media screen and (min-width : 768px)
				width 600px
			@media screen and (min-width : 992px)
				width 600px
			@media screen and (min-width : 1200px)
				width 800px
		.ngdialog-close
			color color-grisoscuro
			cursor pointer
			font-size 20px
			line-height 25px
			position absolute
			right -12px
			text-align center
			top -10px
			text-decoration none
			width 24px
			&:hover
				color color-grisoscuro
			
@keyframes mostarContainer
	0% 
		opacity 0
		top 0% 
	100%
		opacity 1
		top 0 
@keyframes mostrarDialog
	0% 
		opacity 0 
	100%
		opacity 1
		