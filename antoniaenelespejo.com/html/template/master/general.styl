fuente_cajatexto 	= "hk_groteskregular"
fuente_boton 		= "hk_groteskmedium"

/***
	Descripcion: Se definen las funciones mixtas
	que emplearemos 
***/
html
	overflow auto
body
	font-size 16px
p
	color azul
	font-size 14px
	font-family fuente_texto
h1
	font-family fuente_titulo
h2,h3,h4
	font-family fuente_subtitulo
.inner-alert
	display none
	.alert
		border-radius 4px
		padding 15px
		&.error
			background #f2dede
			border-color #ebccd1
			p
				color #b94a48
		&.exito
			background #dff0d8
			border-color #d6e9c6
			p
				color #468847
label
	&.error
		display block
		text-align left
		margin-top 10px
		color rojo
			
.container
	margin auto
	width 100%
	@media screen and (min-width: 768px)
		width 100%
	@media screen and (min-width: 992px)
		width 970px
	@media screen and (min-width: 1200px)
		width 1020px
.ocultarScroll
	overflow hidden
	height 100vh
.page-popup
	background rgba(255,255,255,0.75)
	position absolute
	top 0
	left 0
	z-index 9999
	width 100%
	height 100vh
	display flex
	justify-content center
	align-items center
	.inner-popup
		background dorado
		width 100%
		height auto
		margin auto
		position relative
		padding-bottom 40px
		padding-left 25px
		padding-right 25px
		@media screen and (min-width:992px)
			width 528px
			padding-left 0
			padding-right 0
		.cuadrado
			position absolute
			width 46px
			height 33px
			background blanco
			right 24px
			top 24px
			a
				position absolute
				right 0
				color dorado
				font 20px hk_grotesksemibold
				left 17px
				top 2px
				&:hover
					color verde_oscuro
		.row
			text-align center
			h2
				color blanco
				font 19px bodonixtregular
				text-align center
				padding-top 70px
				&:last-child
					padding-top 0
				@media screen and (min-width:992px)
					font 31px bodonixtregular
			h4
				color blanco
				font 16px hk_groteskregular
				text-align center
				margin-top 20px
				@media screen and (min-width:992px)
					font 24px hk_groteskregular	
					margin-top 35px
			button
				font  18px hk_groteskregular
				text-align center
				background blanco
				color dorado
				border-radius 0
				margin-top 24px
				@media screen and (min-width:992px)
					font  21px hk_groteskregular	
		form
			text-align center
			input
				background blanco
				width 100%
				height 32.5px
				margin-top 20px
				padding-left 6px
		.rowform
			width 100%
			margin auto
			@media screen and (min-width:992px)
				width 399.5px
#msj
	padding-top 17px
	display none
.menuActive
	padding 5px 10px
	border 1px solid verde_oscuro