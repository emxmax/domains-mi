footer
	padding 0 25px
	@media screen and (min-width:992px)
		padding 0
	.linksFooter
		border-bottom 1px solid #535759
	.inner-menu
		align-items center
		display flex
		flex-flow column wrap
		justify-content space-around
		padding-bottom 50px
		padding-top 60px
		@media screen and (min-width:992px)
			align-items center
			display flex
			flex-flow row wrap
			justify-content space-around
			padding-bottom 33px
		padding-top 33px
		.row
			a
				img
					display none
					@media screen and (min-width:992px)
						display block
			ul
				text-align center
				@media screen and (min-width:992px)
					text-align left
				.asterisco
					display none
					@media screen and (min-width:992px)
						display inline-block
				li
					display block
					margin-left 0
					margin-right 0
					margin-top 40px
					&:first-child
						margin-left 0
					@media screen and (min-width:992px)
						display inline-block
						margin-left 15px
						margin-right 0
						margin-top 0
						&:first-child
							margin-left 10px
					@media screen and (min-width:1200px)
						display inline-block
						margin-left 22px
						margin-right 5px
						margin-top 0
						&:first-child
							margin-left 22px
					a
						font 12px menu
						color verde_oscuro
						i
							font-size 18px
							color #183A24
							&:hover
								color #292929
					p
						font 14px menu
						color verde_oscuro
				.rrss
					display inline-block
					margin-left 15px
					margin-right 15px
					&:first-child
						margin-left 0
					&:last-child
						margin-right 0
					@media screen and (min-width:992px)
						display inline-block
						margin-left 15px
						margin-right 10px
						&:first-child
							margin-left 0
						&:last-child
							margin-right 0
					@media screen and (min-width:1200px)
						display inline-block
						margin-left 15px
						margin-right 15px
						&:first-child
							margin-left 0
						&:last-child
							margin-right 0
	.copyright
		text-align center
		padding-top 25px
		padding-bottom 20px
		p
			font 12px hk_groteskregular
			color #535759
			a
				font 12px hk_grotesksemibold
				color #535759
				&:hover
					color dorado